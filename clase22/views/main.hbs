 
  {{> guardar}}
 {{#if vistaTest}}
 <h2 class="text-center pb-5">Productos de /vistaTest</h2>
 <div class="container bg-dark text-white text-center" >
     <div class="row" >
    <div class="col-sm pt-2" >
      Nombre
    </div>
    <div class="col-sm pt-2" >
    Precio
    </div>
    <div class="col-sm pt-2" >
     Foto
    </div>
  </div>    
        {{#each productos}}
        <div class="row pt-2 pb-3 text-center">
        <div class="col-sm pt-2" style=" border-top: 1px solid white">
           {{this.nombre}}
        </div>
          <div class="col-sm pt-2" style=" border-top: 1px solid white">
      {{this.precio}}
        </div>
          <div class="col-sm pt-2" style=" border-top: 1px solid white">
         <img width="50px" height="50px" src= {{this.foto}}>
        </div>
      </div>
  {{/each}}
</div>
  {{/if}}
 
